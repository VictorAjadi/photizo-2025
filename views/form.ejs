<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="assets/img/BISUM logo.png" type="image/x-icon" />
    <title>Register Form</title>
    <!-- CSS -->
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome CSS (via CDN) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- CSS Stylesheets -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/css/magnific-popup.css" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/style.css">

</head>

<body class="">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 20px;
            /* Add some padding at the top */
            min-height: 100vh;
            /* Changed from height to min-height */
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/assets/img/slide/Showcase-1.jpg');
            background-size: cover;
            background-position: center;
        }

        .form_container {
            overflow-y: hidden;
            height: 700px;
            display: flex;
            max-width: 80%;
            width: 100%;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex-direction: row;
            /* Default to row */
        }
        @media (max-width: 990px) {
            .form_container{
                overflow-y: scroll;
            }
        }
        .guide-section {
            background-color: orangered;
            color: white;
            padding: 40px;
            width: 40%;
            /* Set width for larger screens */
            flex-grow: 1;
            /* Allow to grow to fill space */
            display: flex;
            flex-direction: column;
            /* Stack contents vertically */
        }

        .form-section {
            padding: 40px;
            width: 60%;
            /* Set width for larger screens */
            flex-grow: 1;
        }

        .guide-section h2,
        .form-section h2 {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: white;
        }

        .guide-section p {
            margin-bottom: 15px;
            line-height: 1.5;
            color: white;
        }

        .section-divider {
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            padding-bottom: 2rem;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            gap: 10px;
        }

        .form-group input[type="text"],
        .form-group input[type="email"],
        .form-group input[type="password"],
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group input[type="checkbox"] {
            margin-right: 10px;
        }

        .register-btn {
            width: 100%;
            background-color: orangered;
            color: white;
            border: none;
            padding: 10px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 5px;
        }

        .register-btn:hover {
            background-color: rgb(221, 91, 44);
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .form_container {
                flex-direction: column;
                /* Stack elements vertically on mobile */
            }

            .guide-section,
            .form-section {
                width: 100%;
                /* Full width on mobile */
            }

            .form-group {
                flex-direction: column;
                /* Stack input fields vertically */
            }
        }
        .my-container{
           width: 90%;
           max-width: 1000px;
           display: flex;
           justify-content: center;
           margin-inline: auto;
        }
        .alert-success{
           color: #155723; /* Text color */
           background-color: #dff0d8; /* Background color */
           border-color: #c3e6cb; /* Border color */
           border-radius: 0.25rem; /* Border radius */
           padding: 0.75rem 1.25rem; /* Padding */
           margin-bottom: 1rem; /* Margin bottom */
           margin-top: 1rem; /* Margin bottom */
           border: 1px solid transparent; /* Initial border */
           text-align: center;
        }
        .alert-error{
           color: #f8d7da; /* Text color */
           background-color: #dc3545; /* Background color */
           border-color: #c8233c; /* Border color */
           border-radius: 0.25rem; /* Border radius */
           padding: 0.75rem 1.25rem; /* Padding */
           margin-bottom: 1rem; /* Margin bottom */
           margin-top: 1rem; /* Margin bottom */
           border: 1px solid transparent; /* Initial border */
           text-align: center;
        }
      </style>

    <div class="form_container d-md-flex my-2">
        <div class="guide-section col-md-5">
            <h4 class="text-center text-white">Account Details</h4>
            <div class="section-divider mb-4">
                <p class="text-white">Make your payment to this bank account to proceed with registration:</p>
                <p class="text-white">Bank: Polaris Bank</p>
                <p class="text-white">Bank Name: Higher Ground Baptist Church</p>
                <p class="text-white">Account No: 1140056637</p>
                <p class="text-white">Description: Your Name - PHOTIZO 2025</p>
            </div>

            <h4 class="text-center text-white">Registration Guide</h4>
            <p class="text-white">1. Make your payment to the above bank account with the specified description.</p>
            <p class="text-white">2. Fill in the information in the form and upload your receipt.</p>
        </div>
        <div class="form-section col-md-7">
                <!-- flash error and success -->
            <div class="my-container top-layer">
                <% if (error && error.length > 0) { %>
                    <div id="error-alert" class="alert alert-error" role="alert">
                        <%= error[0] %>
                    </div>
                    <script>
                        const errorAlert = document.getElementById('error-alert');
                        // Ensure errorAlert exists before setting timeout
                        if (errorAlert) {
                            setTimeout(() => {
                            errorAlert.style.display = 'none';
                            }, 5000); // 30 seconds in milliseconds
                        }
                    </script>
                <% } else if (success && success.length > 0) { %>
                    <div id="success-alert" class="alert alert-success" role="alert">
                        <%= success[0] %>
                    </div>
                    <script>
                        const successAlert = document.getElementById('success-alert');
                        // Ensure successAlert exists before setting timeout
                        if (successAlert) {
                            setTimeout(() => {
                            successAlert.style.display = 'none';
                            }, 5000); // 30 seconds in milliseconds
                        }
                    </script>
                <% } else{ %>
                    <div id="success-alert-alert" class="alert alert-success" role="alert">
                        Update | Enter Your Details For Editing / Registering
                    </div>
                    <script>
                        const success_alert_alert = document.getElementById('success-alert-alert');
                
                        // Ensure successAlert exists before setting timeout
                        if (success_alert_alert) {
                            setTimeout(() => {
                                success_alert_alert.style.display = 'none';
                            }, 5000); // 30 seconds in milliseconds
                        }
                    </script>
                <% } %>
            </div>
            <h4 style="color: orangered;">REGISTER FORM</h4>
            <form id="registerForm" method="post" action="/photizo/register" enctype="multipart/form-data">
                <!-- Name Fields -->
                <div class="row g-3 mb-3">
                    <div class="col">
                        <input type="text" class="form-control" name="firstName" placeholder="First Name" required
                            aria-label="First Name">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name" required aria-label="Last Name">
                    </div>
                </div>

                <!-- Gender and Age Range -->
                <div class="row g-3 mb-3">
                    <div class="col">
                        <select id="gender" name="gender" class="form-select" required aria-label="Gender">
                            <option selected disabled>Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div class="col">
                        <select id="age-range" name="age" class="form-select" required aria-label="Age Range">
                            <option selected disabled>Age Range</option>
                            <option>11-20</option>
                            <option>21-30</option>
                            <option>31-40</option>
                            <option>41-50</option>
                            <option>51-60</option>
                            <option>61-70</option>
                            <option>71-80</option>
                            <option>81-90</option>
                            <option>91 and Above</option>
                        </select>
                    </div>
                </div>

                <!-- Email and Phone Number -->
                <div class="row g-3 mb-3">
                    <div class="col">
                        <input type="email" name="email" class="form-control" placeholder="Email" required aria-label="Email">
                    </div>
                    <div class="col">
                        <input type="tel" class="form-control" name="mobileNumber" placeholder="Phone Number" required
                            aria-label="Phone Number">
                    </div>
                </div>

                <!-- City and State -->
                <div class="row g-3 mb-3">
                    <div class="col">
                        <input type="text" class="form-control" name="city" placeholder="City" required aria-label="City">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="state" placeholder="State" required aria-label="State">
                    </div>
                </div>

                <!-- Occupation -->
                <div class="mb-3">
                    <select id="occupation" class="form-select" name="occupation" required aria-label="Occupation">
                        <option selected disabled>Are you a Student or Working Class?</option>
                        <option>Student</option>
                        <option>Working Class</option>
                    </select>
                </div>

                <!-- Mode of Attendance -->
                <div class="mb-3">
                    <select id="attendance" class="form-select" name="attendance" required aria-label="Attendance">
                        <option selected disabled>How are you Attending?</option>
                        <option>On-site</option>
                        <option>Online</option>
                    </select>
                </div>

                <!-- Source of Information -->
                <div class="mb-3">
                    <select id="source-info" class="form-select" name="learnings" aria-label="Source of Information" required>
                        <option selected disabled>How did you learn about the program?</option>
                        <option>Church</option>
                        <option>Social Media</option>
                        <option>Flyer or Banner</option>
                        <option>Recommendation from a friend</option>
                        <option>Other</option>
                    </select>
                    <input type="text" class="form-control mt-2" name="otherLearnings" id="other-source" placeholder="Please specify"
                        style="display:none;">
                </div>

                <!-- File Upload -->
                <div class="mb-3">
                    <label for="file-upload" class="form-label">Upload your payment receipt</label>
                    <input type="file" accept="/images*" name="file" class="form-control" id="file-upload" required>
                </div>

                <button type="submit" id="submitButton" class="register-btn">Register</button>
            </form>
        </div>
    </div>
    <script>
        const sourceSelect = document.getElementById("source-info");
        const otherSourceInput = document.getElementById("other-source");
        sourceSelect.addEventListener("change", function () {
            if (this.value === "Other") {
                otherSourceInput.style.display = "block";
            } else {
                otherSourceInput.style.display = "none";
                otherSourceInput.value = ""; // Clear the input
            }
        });
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("registerForm");
            const button = document.getElementById("submitButton");

            // Add event listener for the form submission
            form.addEventListener("submit", function (event) {
                // Disable the button
                button.disabled = true;
                button.style.background = 'gray';
                button.innerText = "Submitting...";
            });
        });

    </script>
        <!-- JS -->
    <!-- jQuery Library -->
    <script src="assets/js/jquery.min.js"></script>

    <!-- Bootstrap JavaScript -->
    <script src="assets/js/bootstrap.min.js"></script>

    <!-- jQuery Plugins -->
    <script src="assets/js/jquery.sticky.js"></script>
    <script src="assets/js/jquery.magnific-popup.min.js"></script>

    <!-- Plugin Options and Custom Scripts -->
    <script src="assets/js/magnific-popup-options.js"></script>
    <script src="assets/js/click-scroll.js"></script>
    <script src="assets/js/custom.js"></script>
</body>

</html>
